block variables

doctype html
html
	head
		meta(charset="utf-8")
		title #{title}
		meta(content="" name="description")
		meta(content="" name="keywords")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(content="ie=edge" http-equiv="x-ua-compatible")

		//- link(rel="shortcut icon" href="assets/images/fav.png" type="image/x-icon")
		link(rel="apple-touch-icon" href="assets/images/fav.png")

		link(rel="stylesheet" type="text/css" href="assets/styles/swiper-bundle.min.css")
		link(rel="stylesheet" type="text/css" href="assets/styles/accordion.min.css")
		//- link(rel="stylesheet" type="text/css" href="assets/styles/aos.scss")
		link(href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet")
		link(rel="stylesheet" type="text/css" href="assets/styles/app.css")
		
	body
		.wrapper
			include components/header.pug

			block content

			if aboutText
				include components/about.pug
						
			if contactForm
				include components/contact.pug

			include components/footer.pug
			.main-size-table
				include components/size-table.pug
			.main-form-popup
				include components/form-popup.pug

		//- https://imask.js.org
		script(src="assets/scripts/imask.min.js")

		//- https://github.com/michalsnik/aos
		//- script(src="assets/scripts/aos.js")
		script(src="https://unpkg.com/aos@2.3.1/dist/aos.js")
		
		//- https://github.com/michu2k/Accordion
		script(src="assets/scripts/accordion.min.js")

		//- https://swiperjs.com/
		script(src="assets/scripts/swiper-bundle.min.js")

		//- https://github.com/francoischalifour/medium-zoom
		script(src="assets/scripts/medium-zoom.min.js")

		//- https://github.com/WICG/focus-visible
		script(src="assets/scripts/focus-visible.js")
		
		script(src="assets/scripts/main.js")
